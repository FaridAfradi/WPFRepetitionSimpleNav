<Window
    x:Class="WPFRepetition.RootWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFRepetition"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:WPFRepetition.UserControls"
    Title="Demo"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid x:Name="Root">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button
                x:Name="ShowLeft"
                Click="ShowLeft_Click"
                Content="Show Left" />
            <Button
                x:Name="ShowCenter"
                Click="ShowCenter_Click"
                Content="Show Center" />
            <Button
                x:Name="ShowRight"
                Click="ShowRight_Click"
                Content="Show Right" />
        </StackPanel>
        <views:LeftView x:Name="LeftViewFld" Grid.Row="1" />
        <views:RightView
            x:Name="RightViewFld"
            Grid.Row="1"
            Visibility="Collapsed" />
        <views:CenterView
            x:Name="CenterViewFld"
            Grid.Row="1"
            Visibility="Collapsed" />
    </Grid>
</Window>
